    <!--演示简单JavaWeb操作-->
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.fisher.fruit.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add.do</url-pattern>
    </servlet-mapping>
