<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--演示简单JavaWeb操作-->
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.fisher.fruit.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add.do</url-pattern>
    </servlet-mapping>

    <!--演示servlet中service方法-->
    <servlet>
        <servlet-name>Dome01Servlet</servlet-name>
        <servlet-class>com.fisher.fruit.servlets.Dome01Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dome01Servlet</servlet-name>
        <url-pattern>/dome01</url-pattern>
    </servlet-mapping>

    <!--演示servlet生命周期-->
    <servlet>
        <servlet-name>Dome02Servlet</servlet-name>
        <servlet-class>com.fisher.fruit.servlets.Dome02Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Dome02Servlet</servlet-name>
        <url-pattern>/dome02</url-pattern>
    </servlet-mapping>
    <!--
    ①用户（client）请求 action="add.do"
    ②服务器（项目），web.xml中找到url-pattern = /add.do
    ③servlet-name="AddServlet"
    ④找和servlet-mapping中和servlet-name一致的servlet
    ⑤找servlet-class -> com.fisher.servlet.AddServlet
    ⑥用户发送的是post请求（method=“post”），因此tomcat会执行AddServlet中的doPost方法。
    -->
    <!--项目初始页
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    -->
</web-app>